{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint", "prettier"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "ignorePatterns": ["sst.config.ts"]
}
